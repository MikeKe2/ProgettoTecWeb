<!DOCTYPE html>
<html>
  
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" 
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <title>Avventure Pubblicate</title>
  </head>

  <body>
    <% for(let user of data){ %>
      <span class="user" hidden><%= user.username %></span>
    <% } %>

    <div class="container"></div>
      <h1 class="display-4 text-center">Avventure Pubblicate</h1>
      <div class="container-fluid row justify-content-around">
        <div id="Stories" class="col-md-8 container-sm">
          <ul class="list-group list-group-flush">
            <template v-for="(user, uindex) in list">
              <li class="list-group-item clickable nonselectable">
                <strong>Autore: </strong> {{user.name}}
              </li>
              <li class="list-group-item clickable nonselectable">
                <ul class="list-group list-group-flush">
                  <template v-for="(story, sindex) in user.stories">
                    <li class="list-group-item clickable nonselectable"><strong> Nome Storia: </strong> {{story.replaceAll('.json', '')}}</li>
                    <li class="list-group-item clickable">
                      <div class="qr" v-bind:id="'qr_'+uindex+'_'+sindex" v-on:click="copy(uindex, sindex)"></div>
                    </li>
                  </template>
                </ul>
              </li>
            </template>
          </ul>
        </div>
      </div>
    </div>
    <script src="/Manager/js/qrcode.min.js"></script>
    <script src="/Qr/js/Avventure.js"></script>
    <script src="/Qr/js/utility.js"></script>
  </body>
</html>